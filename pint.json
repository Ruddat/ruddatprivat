{
    "preset": "laravel",
    "rules": {
        "array_syntax": {
            "syntax": "short"
        },
        "concat_space": {
            "spacing": "one"
        },
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "no_unused_imports": true,
        "single_quote": true,
        "trailing_comma_in_multiline": {
            "after_heredoc": true,
            "elements": ["arrays", "arguments", "parameters"]
        },
        "phpdoc_align": true,
        "phpdoc_summary": true,
        "phpdoc_types_order": {
            "null_adjustment": "always_last",
            "sort_algorithm": "alpha"
        }
    }
}
